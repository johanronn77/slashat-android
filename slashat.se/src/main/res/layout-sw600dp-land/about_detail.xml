<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/card_bg"
              android:orientation="vertical"
              android:visibility="visible"
              android:id="@+id/aboutdetailroot">
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:background="#de5214">

        <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/tommie"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="Tommie Podzemski"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="36dp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:text="PROGRAMLEDARE"
                    android:textColor="#dddddd"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="23sp"
                    android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="12dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1"
                >

            <TextView
                    android:id="@+id/bio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="40dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="KONTAKT"
                        android:textColor="#de5214"/>

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="12dp"
                        android:background="#de5214"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/twitter"

                            android:src="@drawable/twitter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/twitter"
                            android:text="Twitter"
                            android:textSize="17sp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="12dp"
                        android:background="#e7d6cb"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/email"
                            android:src="@drawable/web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/browser"
                            android:text="Hemsida"
                            android:textSize="17sp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="12dp"
                        android:background="#e7d6cb"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/web"
                            android:src="@drawable/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/email"
                            android:text="E-post"
                            android:textSize="17sp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>